@model Cricket_Club.Models.Credential
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/SignUpStyle.css">

<!DOCTYPE html>
<html>
<body class="bg-image">
    <div class="bg-div">
    <h2>Sign Up</h2>
    <form asp-action="Login" method="post">
        <input type="text" placeholder="Name" asp-for="Name" required />
        <br />
        <br />

        <input type="text" placeholder="Username" asp-for="UserName" required />
        <br />
        <br />

        <input type="email" placeholder="Email" asp-for="Email" required />
        <br />
        <br />

        <input type="password" placeholder="Password" asp-for="Password" required />
        <br />
        <br />
        <input type="submit" value="Submit" />
    </form>
    </div>
</body>
</html>